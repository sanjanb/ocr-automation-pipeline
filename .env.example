# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash-exp

# Database Configuration
# MongoDB connection string - adjust as needed
MONGODB_URL=mongodb://localhost:27017/document_processor
DATABASE_NAME=document_processor

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO

# Processing Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
PROCESSING_TIMEOUT=60   # seconds
MIN_CONFIDENCE_THRESHOLD=0.5

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_BURST=10

# Cache Configuration (Redis - optional)
# REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Alternative: Hugging Face Integration (if switching from Gemini)
# HUGGING_FACE_TOKEN=your_hugging_face_token_here