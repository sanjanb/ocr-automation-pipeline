# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Smart Document Processor with Advanced SLM Technology

# Database Configuration (Required)
# MongoDB connection string - adjust as needed
MONGODB_URL=mongodb://localhost:27017/document_processor
DATABASE_NAME=admission_automation

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO

# Processing Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
PROCESSING_TIMEOUT=60   # seconds
MIN_CONFIDENCE_THRESHOLD=0.5

# Advanced SLM Configuration (Optional - automatically optimized)
# These settings are pre-configured for optimal performance
MAX_RETRIES=3           # Maximum retry attempts for processing
RETRY_DELAY=60          # Base delay in seconds between retries
ENABLE_FALLBACK_OCR=true # Enable backup processing system

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_BURST=10

# Cache Configuration (Redis - optional)
# REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Note: SLM model processing is automatically configured
# Advanced AI capabilities work out of the box with no additional setup